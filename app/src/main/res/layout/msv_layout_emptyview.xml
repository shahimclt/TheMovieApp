<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cactus"
            android:alpha="0.8"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/msv_empty_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msv_empty_default_text"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_margin="@dimen/activity_vertical_margin"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/msv_empty_btn"
            xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing"
            android:text="@string/msv_empty_default_btn_title"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/element_spacing"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            fancy:fb_focusColor="@color/colorPrimaryLight"
            fancy:fb_fontIconResource="&#xf021;"
            fancy:fb_iconPosition="left"
            fancy:fb_fontIconSize="16dp"
            fancy:fb_iconPaddingLeft="@dimen/element_spacing"
            fancy:fb_iconPaddingRight="@dimen/element_spacing"
            fancy:fb_radius="4dp"
            fancy:fb_textSize="16sp"
            fancy:fb_textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>