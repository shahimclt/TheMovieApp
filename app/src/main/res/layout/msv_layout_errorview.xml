<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"

    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_cloud"
        android:scaleType="centerInside"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/msv_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msv_error_default_text"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_vertical_margin"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/msv_error_btn"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_spacing"
        android:text="@string/msv_empty_default_btn_title"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/element_spacing"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorPrimaryLight"
        fancy:fb_fontIconResource="&#xf021;"
        fancy:fb_iconPosition="left"
        fancy:fb_fontIconSize="16dp"
        fancy:fb_iconPaddingLeft="@dimen/element_spacing"
        fancy:fb_iconPaddingRight="@dimen/element_spacing"
        fancy:fb_radius="4dp"
        fancy:fb_textSize="16sp"
        fancy:fb_textColor="@color/white" />

</LinearLayout>